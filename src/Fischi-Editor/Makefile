ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

RESCOMP = windres
INCLUDES += -I. -I../Fischi-Engine
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = ../../bin/Debug-windows-x86_64
TARGET = $(TARGETDIR)/Fischi-Editor.exe
OBJDIR = ../../obj/Debug-windows-x86_64/Debug/Fischi-Editor
DEFINES += -DFISCHI_PLATFORM_WINDOWS -D_WINDLL -DFISCHI_DEBUG
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++20
LIBS += ../../bin/Debug-windows-x86_64/Fischi-Engine.lib
LDDEPS += ../../bin/Debug-windows-x86_64/Fischi-Engine.lib
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64

else ifeq ($(config),release)
TARGETDIR = ../../bin/Release-windows-x86_64
TARGET = $(TARGETDIR)/Fischi-Editor.exe
OBJDIR = ../../obj/Release-windows-x86_64/Release/Fischi-Editor
DEFINES += -DFISCHI_PLATFORM_WINDOWS -D_WINDLL -DFISCHI_RELEASE
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++20
